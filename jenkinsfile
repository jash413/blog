pipeline {
    agent any

        environment {
        EC2_SERVER = 'ubuntu@13.233.99.70'
        DESTINATION_PATH = '/var/www/html/'
          MY_CREDENTIAL_ID = 'trakky_blog'
    }


    stages {
        stage('Clean Workspace') {
            steps {
                cleanWs()
            }
        }
        stage('Initialize') {
            steps {
                echo 'Initializing pipeline...'
            }
        }

        stage('Clone Repository') {
            steps {
                checkout scm
            }
        }

        stage('Install Dependencies') {
            steps {
                script {
                    echo 'Installing Node.js dependencies...'
                    sh 'npm install'
                }
            }
        }

        stage('Build') {
            steps {
                script {
                    echo 'Building Next.js application...'
                    sh 'npm run build'
                }
            }
        }

          stage('Deploy') {
            steps {
                script {
                    // Use the withCredentials block to bind the secret file to a variable
                withCredentials([file(credentialsId: MY_CREDENTIAL_ID, variable: 'SSH_KEY')]) {
                    echo 'Copying build files to Apache web directory...'
                    sh "scp -i ${JENKINS_HOME}/workspace/Trakky_Blog/trakky_blog.pem -r ./out/* ${EC2_SERVER}:${DESTINATION_PATH}"
                }
                }
            }
          }

    }

    post {
        success {
            echo 'Deployment successful!'
        }
        failure {
            echo 'Deployment failed!'
        }
        always {
            echo 'Deployment completed!'
        }
    }
}
